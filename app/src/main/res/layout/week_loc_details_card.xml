<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/primary"
    android:id="@+id/week_home_card_loc_dets"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:elevation="8dp"
    app:cardCornerRadius="35dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ll_week_days_details_loc_dets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_day_name_week_card_loc_dets"
            android:layout_width="43dp"
            android:layout_height="35dp"
            android:layout_gravity="center"

            android:layout_margin="16dp"
            android:text="Friday"
            android:fontFamily="@font/lobster"

            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/iv_weather_week_card_loc_dets"
            android:layout_width="45dp"
            android:layout_height="42dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:focusable="true"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher_foreground"
            app:layout_constraintBottom_toBottomOf="@+id/tv_day_name_week_card_loc_dets"
            app:layout_constraintStart_toEndOf="@+id/tv_day_name_week_card_loc_dets"
            app:layout_constraintTop_toTopOf="@+id/tv_day_name_week_card_loc_dets" />

        <TextView
            android:id="@+id/tv_description_week_card_loc_dets"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/lobster"
            android:text="Clear Sky"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/iv_weather_week_card_loc_dets"
            app:layout_constraintStart_toEndOf="@+id/iv_weather_week_card_loc_dets"
            app:layout_constraintTop_toTopOf="@+id/iv_weather_week_card_loc_dets"
            app:layout_constraintVertical_bias="0.55" />

        <TextView
            android:id="@+id/tv_temp_state_week_card_loc_dets"
            android:layout_width="110dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginStart="28dp"
            android:fontFamily="@font/lobster"

            android:text="22/16Â°C"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/tv_description_week_card_loc_dets"
            app:layout_constraintStart_toEndOf="@+id/tv_description_week_card_loc_dets"
            app:layout_constraintTop_toTopOf="@+id/tv_description_week_card_loc_dets"
            app:layout_constraintVertical_bias="0.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>